doctype 5
html
	head
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
		script(src='/bootstrap/js/bootstrap.min.js')
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
	body
		script(type="text/javascript", src="/javascripts/photo-modal.js")
		div.navbar.navbar-inverse.navbar-fixed-top
			div.navbar-inner
				div.navbar-container
					ul.nav.pull-right
						li
							a#navbar-img-link(href="pro")
								p.pull-right#pro-profile-nav Edit Profile
		div.pro-body-container-gray
			div.row-fluid
				div.span9
					div.row-fluid
						div.span3
							img#pro-person-pic(src="images/zach2.png")
						div.span9#pro-info-container
							h4#pro-person-name= user.username
							p#pro-company-name= user.company
							p#pro-location= user.location
							div#pro-description
								p= user.description
								//
									div#pro-description-more
										p Services Provided:
										p We offer a variety of interior design services ranging from project management to furniture sales.
										a#pro-less(href="#") less
									a#pro-more(href="#") ...more
				div.span3#pro-contact-container
					a#pro-contact-me.btn.btn-primary(href="mailto:someone@example.com?Subject=Hello%20again", target="_top") Contact Me
					p.pro-contact-info
						a(href="#") #{user.website}
					p.pro-contact-info <strong>Phone:</strong>  #{user.phone}
					p.pro-contact-info <strong>Email:</strong>  #{user.email}
					p.pro-contact-info <strong>Address:</strong> #{user.address}
			div#pro-album-container
				div#pro-album-1.pro-album-cover
					a(href="#pro-photo-modal", role="button", data-toggle="modal")
						img#pro-album.pro-album-pic(src="images/coffee1-2.jpg")
						div.pro-album-label-container
							div.pro-album-label
								p.search-pic-name Strand 21 Coffee
				div.pro-album-cover
					a(href="#")
						img.pro-album-pic(src="images/wine1-1.jpg")
						div.pro-album-label-container
							div.pro-album-label
								p.search-pic-name Wine Collection
				div.pro-album-cover
					a(href="#")
						img.pro-album-pic(src="images/yoga10-2.jpg")
						div.pro-album-label-container
							div.pro-album-label
								p.search-pic-name Yoga Savana
		div#pro-photo-modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="profile-photo-modalLabel", aria-hidden="true")
			div#profile-modal-large-container
				button.close(type="button", data-dismiss="modal", aria-hidden="true") Ã—
				img#profile-modal-large-img(src="#")
			a#pro-modal-slide-left(class="carousel-control left", href="#myCarousel", data-slide="prev") &lsaquo;
			a#pro-modal-slide-right(class="carousel-control right", href="#myCarousel", data-slide="next") &rsaquo;
		